<% provide :page_title, t("password_resets.edit.title") %>

<%= render "shared/error_messages", obj: @user %>

<h1><%= t "password_resets.edit.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
        <%= f.label :password, t("password_resets.edit.password") %>
        <%= f.password_field :password, class: "form-control",
          autofocus: true, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,
          t("password_resets.edit.confirm") %>
        <%= f.password_field :password_confirmation, class: "form-control",
          required: true %>
      </div>

      <div class="form-group">
        <%= f.submit t("password_resets.edit.submit"),
          class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
</div>
