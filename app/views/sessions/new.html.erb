<% provide :title, t("sessions.new.title") %>
<h1><%= t "sessions.new.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sessions.new.pass") %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "sessions.new.remember" %></span>
      <% end %>
      <%= f.submit t("sessions.new.title"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "sessions.new.newusr" %>
      <%= link_to t("sessions.new.signup"), signup_path %></p>
    <p class="text-center">
      <%= link_to t("password_resets.edit.new"), new_password_reset_path %>
    </p>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  </div>
</div>
